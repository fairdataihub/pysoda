{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "description": {
            "type": "object",
            "properties": {
                "study-purpose": {
                    "type": "string"
                },
                "data-collectoin": {
                    "type": "string"
                },
                "primary-conclusion": {
                    "type": "string"
                }
            }
        },
        "additional_links": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "link": {
                        "type": "string",
                        "pattern": "^(https?://(?:www\\.)?|doi:)[\\w\\d./?=#]+$"
                    },
                    "relation": {
                        "type": "string",
                        "enum": [
                            "IsCitedBy",
                            "Cites",
                            "IsSupplementTo",
                            "IsSupplementedBy",
                            "IsContinuedByContinues",
                            "IsDescribedBy",
                            "Describes",
                            "HasMetadata",
                            "IsMetadataFor",
                            "HasVersion",
                            "IsVersionOf",
                            "IsNewVersionOf",
                            "IsPreviousVersionOf",
                            "HasPart",
                            "IsPublishedIn",
                            "IsReferencedBy",
                            "References",
                            "IsDocumentedBy",
                            "Documents",
                            "IsCompiledBy",
                            "Compiles",
                            "IsVariantFormOf",
                            "IsOriginalFormOf",
                            "IsIdenticalTo",
                            "IsReviewedBy",
                            "Reviews",
                            "IsDerivedFrom",
                            "IsSourceOf",
                            "IsRequiredBy",
                            "Requires",
                            "IsObsoletedBy",
                            "Obsoletes"
                        ]
                    },
                    "description": {
                        "type": "string"
                    },
                    "linkType": {
                        "type": "string",
                        "enum": [
                            "DOI",
                            "URL"
                        ]
                    },
                    "isFair": {
                        "type": "boolean"
                    }
                }
            }
        },
        "contributor_information": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "contributor_orcid_id": {
                        "type": "string",
                        "description": "The ORCiD for this contributor."
                    },
                    "contributor_affiliation": {
                        "type": "string",
                        "description": "The institutional affiliation for this contributor."
                    },
                    "contributor_name": {
                        "type": "string",
                        "pattern": "^[A-Za-z]+, [A-Za-z]+( [A-Za-z]+)?$",
                        "description": "The name of the contributor. The format should be 'Last Name, First Name'."
                    },
                    "contributor_role": {
                        "type": "string",
                        "enum": [
                            "PrincipalInvestigator",
                            "Creator",
                            "CoInvestigator",
                            "CorrespondingAuthor",
                            "DataCollector",
                            "DataCurator",
                            "DataManager",
                            "Distributor",
                            "Editor",
                            "Producer",
                            "ProjectLeader",
                            "ProjectManager",
                            "ProjectMember",
                            "RelatedPerson",
                            "Researcher",
                            "ResearchGroup",
                            "Sponsor",
                            "Supervisor",
                            "WorkPackageLeader",
                            "Other"
                        ],
                        "description": "The role of the contributor in the project. There must be at least one PrincipalInvestigator."
                    }
                }
            }
        },
        "basic_information": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string",
                    "description": "The title of the project."
                },
                "subtitle": {
                    "type": "string",
                    "description": "The subtitle of the project."
                },
                "description": {
                    "type": "string",
                    "description": "A detailed description of the project."
                },
                "keywords": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "A list of keywords related to the project."
                },
                "funding": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "List of funding awards for the project."
                },
                "acknowledgments": {
                    "type": "string",
                    "description": "Acknowledgments for the project."
                },
                "license": {
                    "type": "string",
                    "description": "The license under which the project is released."
                }
            },
            "required": [
                "title",
                "description",
                "keywords",
                "license"
            ]
        },
        "related_information": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "identifier_description": {
                        "type": "string"
                    },
                    "relation_type": {
                        "type": "string",
                        "enum": ["IsProtocolFor", "HasProtocol"]
                    },
                    "identifier": {
                        "type": "string",
                        "pattern": "^(https?://(?:www\\.)?|doi:)[\\w\\d./?=#]+$"
                    },
                    "identifier_type": {
                        "type": "string",
                        "enum": ["DOI", "URL"]
                    }
                },
                "required": [
                    "identifier_description",
                    "relation_type",
                    "identifier",
                    "identifier_type"
                ]
            }
        },
        "dataset_information": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "keywords": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "number of samples": {
                    "type": "number"
                },
                "number of subjects": {
                    "type": "number"
                },
                "study purpose": {
                    "type": "string"
                },
                "study data collection": {
                    "type": "string"
                },
                "study primary conclusion": {
                    "type": "string"
                },
                "study collection title": {
                    "type": "string"
                }
            }
        },
        "study_information": {
            "type": "object",
            "properties": {
                "study_purpose": {
                    "type": "string"
                },
                "study_data_collection": {
                    "type": "string"
                },
                "study_primary_conclusion": {
                    "type": "string"
                },
                "study_collection_title": {
                    "type": "string"
                },
                "study_organ_system": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "study_approach": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "study_technique": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    }
}